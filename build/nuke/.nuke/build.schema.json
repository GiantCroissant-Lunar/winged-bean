{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "BuildAll",
        "CI",
        "CIWithReports",
        "Clean",
        "CleanBuildPackages",
        "CleanRepository",
        "Compile",
        "DebugWrapper",
        "GenerateComponentReports",
        "NuGetWorkflow",
        "Pack",
        "Push",
        "Restore",
        "RestoreSolution",
        "SyncNugetPackagesToLocalFeeds",
        "Test"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "BuiltPackagesDirectoryParam": {
          "type": "string",
          "description": "Directory where freshly built packages (.nupkg) are placed (overrides config)"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "NuGetLocalRepositoriesParam": {
          "type": "string",
          "description": "Comma-separated list of local NuGet repositories to copy to (overrides config array)"
        },
        "NuGetNuGetApiKey": {
          "type": "string",
          "description": "NuGet API key for push"
        },
        "NuGetNuGetConfiguration": {
          "type": "string",
          "description": "Configuration to build"
        },
        "NuGetNuGetExcludePackages": {
          "type": "string",
          "description": "Packages to exclude from cleanup"
        },
        "NuGetNuGetMaxVersions": {
          "type": "integer",
          "description": "Maximum versions to keep during cleanup",
          "format": "int32"
        },
        "NuGetNuGetProjects": {
          "type": "string",
          "description": "Projects to pack (semicolon-separated)"
        },
        "NuGetNuGetSource": {
          "type": "string",
          "description": "NuGet push source URL or name"
        },
        "NuGetSyncLayoutParam": {
          "type": "string",
          "description": "Sync layout: hierarchical | flat | both (overrides config)"
        },
        "Project": {
          "type": "string",
          "description": "Project to build: 'console' (default) or 'framework'"
        },
        "wrapper-config-path": {
          "type": "string",
          "description": "Config path override from wrapper script"
        },
        "wrapper-nuke-root": {
          "type": "string",
          "description": "NUKE root directory override from wrapper script"
        },
        "wrapper-script-dir": {
          "type": "string",
          "description": "Script directory from wrapper script"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
