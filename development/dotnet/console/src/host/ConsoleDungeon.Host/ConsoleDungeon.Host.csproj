<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>ConsoleDungeon.Host</RootNamespace>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference foundation services for dynamic plugin loading -->
    <ProjectReference Include="../../../../framework/src/WingedBean.Registry/WingedBean.Registry.csproj" />
    <ProjectReference Include="../../../../framework/src/WingedBean.PluginLoader/WingedBean.PluginLoader.csproj" />
    <ProjectReference Include="../../providers/WingedBean.Providers.AssemblyContext/WingedBean.Providers.AssemblyContext.csproj" />
    <!-- Contracts for Terminal apps -->
    <ProjectReference Include="../../../../framework/src/WingedBean.Contracts.Terminal/WingedBean.Contracts.Terminal.csproj" />
    <ProjectReference Include="../../../../framework/src/WingedBean.Contracts.Game/WingedBean.Contracts.Game.csproj" />
    <!-- Additional shared contracts for plugins (RFC-0037) -->
    <ProjectReference Include="../../../../framework/src/WingedBean.Contracts.Scene/WingedBean.Contracts.Scene.csproj" />
    <ProjectReference Include="../../../../framework/src/WingedBean.Contracts.Input/WingedBean.Contracts.Input.csproj" />
    <!-- New plugin system + ALC loader for hybrid discovery -->
    <ProjectReference Include="../../../../framework/src/WingedBean.PluginSystem/WingedBean.PluginSystem.csproj" />
    <ProjectReference Include="../WingedBean.Host.Console/WingedBean.Host.Console.csproj" />
    <ProjectReference Include="../../../../framework/src/WingedBean.Hosting/WingedBean.Hosting.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="plugins.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Import Project="build/copy-plugins.targets" />

  <ItemGroup>
    <PackageReference Include="Scrutor" />
  </ItemGroup>

</Project>
