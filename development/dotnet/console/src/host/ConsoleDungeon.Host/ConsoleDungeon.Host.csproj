<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>ConsoleDungeon.Host</RootNamespace>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference the ConsoleDungeon app -->
    <ProjectReference Include="../ConsoleDungeon/ConsoleDungeon.csproj" />

    <!-- Reference Registry and service plugins -->
    <ProjectReference Include="../../../../framework/src/WingedBean.Registry/WingedBean.Registry.csproj" />
    <ProjectReference Include="../../plugins/WingedBean.Plugins.WebSocket/WingedBean.Plugins.WebSocket.csproj" />
    <ProjectReference Include="../../plugins/WingedBean.Plugins.TerminalUI/WingedBean.Plugins.TerminalUI.csproj" />
    <ProjectReference Include="../../plugins/WingedBean.Plugins.Config/WingedBean.Plugins.Config.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="plugins.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Import Project="build/copy-plugins.targets" />

</Project>
