{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/claude-sonnet-4",
  "agent": {
    "rfc-implementer": {
      "description": "Implements RFCs following Winged Bean conventions",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true
      }
    },
    "test-writer": {
      "description": "Writes xUnit tests for .NET projects",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "write": true,
        "edit": true,
        "read": true
      }
    },
    "security-auditor": {
      "description": "Audits code for security issues",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "read": true
      }
    },
    "doc-writer": {
      "description": "Creates and updates documentation",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "write": true,
        "edit": true,
        "read": true
      }
    },
    "build-helper": {
      "description": "Assists with build pipeline and Task commands",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "bash": true,
        "read": true
      }
    },
    "issue-manager": {
      "description": "Creates and manages GitHub issues",
      "mode": "subagent",
      "model": "opencode/claude-sonnet-4",
      "tools": {
        "write": true,
        "read": true
      }
    }
  }
}
